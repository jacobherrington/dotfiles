# Aliases

# Utility
alias now="date +\"%m_%d_%Y\""
alias src="cd ~/src"

# Programs
alias cm='chezmoi'
alias s='ncspot'

# Git
alias revise='git commit -am "c" && git rebase -i HEAD~2'
alias amend='git add . && git commit --amend'
alias cleanup-branches='git branch --merged | egrep -v "(^\*|master|dev)" | xargs git branch -d'
